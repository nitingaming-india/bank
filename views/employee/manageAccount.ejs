<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Account</title>
  <style>
    /* Dark Theme Styles */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #1a1a1a;
      color: #ffffff;
      margin: 0;
      padding: 2rem;
      min-height: 100vh;
    }

    h1 {
      color: #00ff88;
      text-align: center;
      margin-bottom: 2rem;
    }

    .account-info {
      background: #2d2d2d;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      max-width: 800px;
      margin: 0 auto;
    }

    .field {
      margin-bottom: 15px;
      padding: 8px;
      border-bottom: 1px solid #4d4d4d;
    }

    .field label {
      font-weight: bold;
      display: inline-block;
      width: 180px;
      color: #00ff88;
    }

    .actions {
      margin-top: 20px;
      text-align: center;
    }

    button {
      background: #00ff88;
      color: #1a1a1a;
      border: none;
      padding: 1rem 2rem;
      border-radius: 4px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin: 0 10px;
    }

    button:hover {
      background: #00cc66;
      transform: translateY(-1px);
    }

    .document-images {
      display: flex;
      gap: 30px;
      margin-top: 30px;
      flex-wrap: wrap;
    }

    .document-images div {
      flex: 1;
      min-width: 300px;
    }

    .document-images img {
      width: 100%;
      max-width: 400px;
      border: 1px solid #4d4d4d;
      border-radius: 4px;
      padding: 5px;
      background: #3d3d3d;
    }

    
  </style>
</head>
<body>
  <h1>Manage Account</h1>
  
  <div class="account-info">
    <div class="field">
      <label>Account Holder:</label>
      <%= account.firstName %> <%= account.lastName %>
    </div>
    
    <div class="field">
      <label>Account Number:</label>
      <%= account.accountNumber %>
    </div>
    
    <div class="field">
      <label>Customer ID:</label>
      <%= account.customerId %>
    </div>
    
    <div class="field">
      <label>Mobile Number:</label>
      <%= account.mobileNumber %>
    </div>
    
    <div class="field">
      <label>Aadhaar Number:</label>
      <%= account.adhaarNumber %>
    </div>
    
    <div class="field">
      <label>Date of Birth:</label>
      <%= formatDate(account.dob) %>
    </div>
    
    <div class="field">
      <label>Current Balance:</label>
      ₹<%= account.balance.toFixed(2) %>
    </div>

    <div class="document-images">
      <div>
        <h3>Account Opening Form</h3>
        <img src="../../<%= account.accountOpeningFormImage %>" alt="Account Form">
      </div>
      <div>
        <h3>Customer Photo</h3>
        <img src="../../<%= account.customerPhoto %>" alt="Customer Photo">
      </div>
    </div>
  </div>

  <div class="actions">
    <button onclick="deposit()">Deposit</button>
    <button onclick="withdraw()">Withdraw</button>
    <button onclick="checkBalance()">Check Balance</button>
  </div>

  <script>
    async function handleTransaction(url, type) {
    const input = prompt(`Enter ${type} amount:`);
    
    // Allow commas and currency symbols in input
    if (!input || !/^[₹$]?[0-9,]*\.?[0-9]+$/.test(input)) {
      alert('Please enter a valid amount (e.g., 1000, ₹500.50, or 2,000)');
      return;
    }

    try {
      const response = await fetch(url, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount: input })
      });

      const data = await response.json();
      
      if (!response.ok) {
        throw new Error(data.error || `${type} failed`);
      }

      alert(`${type} Success!\n${data.message}\nNew Balance: ₹${data.balance}`);
      location.reload();
      
    } catch (error) {
      alert(`${type} Error: ${error.message}`);
    }
  }
  
    function deposit() {
      handleTransaction(`/employee/deposit/<%= account._id %>`, 'Deposit');
    }
  
    function withdraw() {
      handleTransaction(`/employee/withdraw/<%= account._id %>`, 'Withdrawal');
    }
  
    function checkBalance() {
      alert(`Current Balance: ₹<%= account.balance.toFixed(2) %>`);
    }
  </script>
</body>
</html>
